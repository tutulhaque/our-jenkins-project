pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Checkout and capture branch info
                script {
                    def scmVars = checkout scm
                    env.CURRENT_BRANCH = scmVars.GIT_BRANCH.replaceAll('origin/', '')
                    echo "Checked out branch: ${env.CURRENT_BRANCH}"
                }
            }
        }

        stage('Build') {
            steps {
                echo "Building branch: ${env.CURRENT_BRANCH}..."
                // sh 'mvn clean compile'
                // sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests on branch: ${env.CURRENT_BRANCH}..."
                // sh 'mvn test'
                // sh 'npm test'
            }
        }

        stage('Deploy') {
            when {
                expression { env.CURRENT_BRANCH == 'main' }  // Only deploy main
            }
            steps {
                echo "Deploying branch: ${env.CURRENT_BRANCH}..."
                // sh './deploy.sh'
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline for branch '${env.CURRENT_BRANCH}' completed successfully!"
        }
        failure {
            echo "❌ Pipeline for branch '${env.CURRENT_BRANCH}' failed!"
        }
    }
}


