pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "Checking out branch: ${env.BRANCH_NAME}"
                checkout scm   // Automatically checks out the branch Jenkins is running on
            }
        }

        stage('Build') {
            steps {
                echo "Building branch: ${env.BRANCH_NAME}..."
                // Example: sh 'mvn clean compile'
                // Example: sh 'npm install'
            }
        }

        stage('Test') {
            steps {
                echo "Running tests on branch: ${env.BRANCH_NAME}..."
                // Example: sh 'mvn test'
                // Example: sh 'npm test'
            }
        }

        stage('Deploy') {
            when {
                branch 'main'   // Only deploy from main branch
            }
            steps {
                echo "Deploying branch: ${env.BRANCH_NAME}..."
                // Example: sh './deploy.sh'
            }
        }
    }

    post {
        success {
            echo "✅ Pipeline for branch '${env.BRANCH_NAME}' completed successfully!"
        }
        failure {
            echo "❌ Pipeline for branch '${env.BRANCH_NAME}' failed!"
        }
    }
}

